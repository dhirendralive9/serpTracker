<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .bg-black {
            background-color: #000 !important;
        }
        .nav-link-custom {
            color: white !important;
            transition: color 0.3s ease-in-out;
        }
        .nav-link-custom:hover {
            color: #00aaff !important; /* Blue hover effect */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-black">
        <div class="container">
            <a class="navbar-brand text-white fw-bold" href="/">SEO Tracker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="/dashboard/check">Check Now</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom btn btn-primary text-white px-3" href="/dashboard/top100">Top 100</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container mt-5">
        <h2>Top 100 Search History</h2>
    
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Keyword</th>
                    <th>Search Engine</th>
                    <th>Country</th>
                    <th>Device</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% history.forEach(entry => { %>
                    <tr>
                        <td><%= entry.keyword %></td>
                        <td><%= entry.searchEngine.toUpperCase() %></td>
                        <td><%= entry.country %></td>
                        <td><%= entry.device %> / <%= entry.os %></td>
                        <td><%= entry.createdAt.toLocaleString() %></td>
                        <td>
                            <form action="/dashboard/top100/history/fetch/<%= entry._id %>" method="POST">
                                <button type="submit" class="btn btn-success btn-sm">Fetch</button>
                            </form>
                            <form action="/dashboard/top100/history/delete/<%= entry._id %>" method="POST" class="mt-1">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    
        <div class="d-flex justify-content-between">
            <% if (page > 1) { %>
                <a href="?page=<%= page - 1 %>&limit=<%= limit %>" class="btn btn-primary">Previous</a>
            <% } %>
            <% if (page < totalPages) { %>
                <a href="?page=<%= page + 1 %>&limit=<%= limit %>" class="btn btn-primary">Next</a>
            <% } %>
        </div>
    
        <div class="mt-3">
            <label>Results per page:</label>
            <select id="paginationLimit" class="form-select w-auto">
                <option value="10">10</option>
                <option value="20" selected>20</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
        </div>
    </div>
    
    <script>
    document.getElementById("paginationLimit").addEventListener("change", function() {
        window.location.href = "?page=1&limit=" + this.value;
    });
    </script>

   
</body>
</html>
